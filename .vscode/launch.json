    "version": "0.2.0",
    "configurations": [
      
        {
            "type": "node",
            "request": "launch",
            "name": "Launch tax scraper",
            "program": "${workspaceFolder}/backend/scraper/taxScraper.ts",
            "preLaunchTask": "tsc: build - backend/tsconfig.json",
            "outFiles": ["${workspaceFolder}/backend/scraper/*.js"],
            "envFile": "${workspaceFolder}/.env"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Launch server",
            "program": "${workspaceFolder}/backend/server/server_typescript.ts",
            "preLaunchTask": "tsc: build - backend/tsconfig.json",
            "outFiles": ["${workspaceFolder}/backend/server/*.js"],
            "envFile": "${workspaceFolder}/.env"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Launch simulator",
            "program": "${workspaceFolder}/backend/simulator/simulationHead.js",
            "preLaunchTask": "tsc: build - backend/tsconfig.json",
            "outFiles": ["${workspaceFolder}/backend/simulator/*.js"],
            "envFile": "${workspaceFolder}/.env"
          }
    ]
  }